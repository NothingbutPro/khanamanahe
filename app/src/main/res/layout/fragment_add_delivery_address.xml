<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/space_10">

            <TextView
                android:id="@+id/tv_add_adres_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Train No."
                android:textSize="14sp" />

            <EditText
                android:id="@+id/et_train_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_5"
                android:textCursorDrawable="@null"
                android:background="@drawable/xml_textbox_bg"
                android:ems="10"
                android:inputType="number" />

            <TextView
                android:id="@+id/tv_add_adres_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PNR No."
                android:textSize="14sp" />

            <EditText
                android:id="@+id/et_pnr_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_5"
                android:background="@drawable/xml_textbox_bg"
                android:ems="10"
                android:textCursorDrawable="@null"
                android:inputType="number"
                android:maxLength="15" />

            <TextView
                android:id="@+id/tv_add_adres_pin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tv_reg_pincode"
                android:textSize="14sp"
                android:visibility="gone" />

            <EditText
                android:id="@+id/et_add_adres_pin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_5"
                android:background="@drawable/xml_textbox_bg"
                android:ems="10"
                android:hint="12345"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_add_adres_socity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Coach No."
                android:textSize="14sp" />

            <EditText
                android:id="@+id/coach_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:textCursorDrawable="@null"
                android:inputType="textPersonName"
                android:background="@drawable/xml_textbox_bg"
                android:gravity="start|center_vertical"
                android:textColor="@color/color_3"/>

            <TextView
                android:id="@+id/tv_add_adres_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Berth No."
                android:textSize="14sp" />

            <EditText
                android:id="@+id/et_berth_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_5"
                android:textCursorDrawable="@null"
                android:background="@drawable/xml_textbox_bg"
                android:inputType="text" />

            <Button
                android:id="@+id/btn_add_adres_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/xml_button"
                android:text="Add Train Detail"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>