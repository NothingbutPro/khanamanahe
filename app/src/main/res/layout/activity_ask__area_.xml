<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ics.cifatofoody.Ask_Area_Activity">

<LinearLayout

android:gravity="center_horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

</LinearLayout>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:text="Khana Zaruri Hain is available on some areas only so please select your area"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </android.support.v7.widget.Toolbar>
    <TextView
        android:text="Please select your Location"
        android:textColor="@color/black"
        android:gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </TextView>

    <LinearLayout

        android:id="@+id/main_ask_li"
        android:background="@android:color/transparent"
        android:layout_below="@id/toolex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <TextView
            android:visibility="gone"
            android:textColor="#000"
            android:text="Below are the areas where Cifato is avaliable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


        </TextView>

        </LinearLayout>

        <EditText
            android:visibility="gone"
            android:id="@+id/city_search_edt"
            android:padding="10dp"
            android:background="@android:color/white"
            android:layout_margin="5dp"
            android:hint="Search Area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </EditText>

    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="30dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Spinner
            android:layout_marginBottom="20dp"
            android:padding="10dp"
            android:id="@+id/area_spin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </Spinner>
        <Button
            android:visibility="invisible"
            android:id="@+id/selec_area_btn"
            android:textColor="@color/white"
            android:background="@drawable/xml_button"
            android:text="Select"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </Button>
    </LinearLayout>
    <ImageView
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolex"
        android:layout_alignParentRight="false"

        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"


        android:src="@drawable/ask_location_pin">

    </ImageView>
</RelativeLayout>